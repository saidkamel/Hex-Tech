{% extends'base-ala.html.twig' %}
{% block headerTitle %}
    <section class="content-header">
        <h1>
            Classes
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Classe</li>
        </ol>
    </section>
{% endblock %}
{% block dataTable %}

    <thead>
    <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>Activités</th>
        <th>nbActivités</th>
        <td>Supprimer</td>
        <td>Edit</td>
    </tr>
    </thead>
    <tbody>

    {%  for classe in classe %}
        <tr>
            <td>{{ classe.idclasse }}</td>
            <td>{{ classe.nomclasse }}</td>
            <td> {%  for i in classe.activite %}
                    {{ i.nomactivite ~","}}
                {% endfor %}</td>
            <td>{{classe.activite | length}}</td>

            <td><a href="{{ path('delete_classe',{'qdt': classe.idclasse }) }}" >Supprimer</a></td>
            <td><a href="{{ path('classe_edit',{'id': classe.idclasse }) }}" >Edit</a></td>

        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>Activités</th>
        <th>nbActivités</th>
        <td>Supprimer</td>
        <td>Edit</td>
    </tr>
    </tfoot>




{% endblock %}

