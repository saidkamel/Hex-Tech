{% extends'base-ala.html.twig' %}
{% block formulaire %}
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Ajouter Activit√©</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        {{ form_start(Form) }}




        <form class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label"> {{ form_label(Form.nomactivite) }}</label>

                    <div class="col-sm-10">
                        {{ form_widget(Form.nomactivite) }}
                        <div class="form-error">
                            {{ form_errors(Form.nomactivite) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">{{ form_label(Form.description) }}</label>

                    <div class="col-sm-10">
                        <div class="col-sm-10">
                            {{ form_widget(Form.description) }}
                            <div class="form-error">
                                {{ form_errors(Form.description) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label  class="col-sm-2 control-label">{{ form_label(Form.type) }}</label>

                    <div class="col-sm-10">
                        <div class="col-sm-10">
                            {{ form_widget(Form.type) }}
                            <div class="form-error">
                                {{ form_errors(Form.type) }}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            {{ form_end(Form) }}
            <!-- /.box-body
            <div class="box-footer">

                <button type="submit" class="btn btn-info pull-right">Ajouter</button>
            </div>-->
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
{% endblock %}
