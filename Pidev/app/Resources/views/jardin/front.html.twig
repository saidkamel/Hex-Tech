{% extends 'base.html.twig' %}

{% block content %}
    <div class="row mb-50">
        <div class="col-md-12 list-grid-view">
            <div class="cws_divider mb-30"></div>
            <div class="row products">
                {% for jardin in jardins %}
                <div class="col-md-6">

                    <div class="shop-item">
                        <!-- Shop Image-->
                        <div class="shop-media">
                            <div class="pic"><img src="{{ asset('uploads/images/'~ jardin.image )}}"  width="400" height="300" ></div>
                            <div class="location">{{ jardin.nom }}</div>
                        </div>
                        <!-- Shop Content-->
                        <div class="shop-item-body"><a href="shop-single.html">
                                <h6 class="shop-title">{{ jardin.nom }}</h6></a>
                            <div class="stars stars-4"></div>
                            <div class="shop-price">Capacité :{{ jardin.capacite }} </div>
                            <p class="mb-30">E-mail :{{ jardin.mail }}</p>
                            <p class="mb-30">Localisation :{{ jardin.localisation }}.</p>
                            <p class="mb-30">Nos Activités :{{ jardin.activite }}</p>
                            <p>{{ twitterButton() }}
                            {{ facebookButton() }}</p>
                            <div class="action sale font-2" style="width: 100px">Tel : {{ jardin.num }}</div>
                        </div>
                        <div class="link"> <a href="pic/recomended/1.jpg" class="fancy"><i class="fa fa-expand"></i></a></div>
                    </div>

                </div>
                {% endfor%}
            </div>
            <!-- ! produts-->
            <div class="cws_divider mb-50 mt-10"></div>
            <div class="shop-data-bot">

                <!-- ! pagination-->
            </div>
        </div>
        <!-- ! content-->
    </div>
{% endblock %}